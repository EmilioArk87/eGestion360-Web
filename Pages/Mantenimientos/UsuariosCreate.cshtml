@page
@model eGestion360Web.Pages.Mantenimientos.UsuariosCreateModel
@{
    ViewData["Title"] = "Nuevo Usuario";
}

<div class="container">
    <div class="row mb-4">
        <div class="col-12">
            <h2><i class="fas fa-user-plus me-2"></i>Nuevo Usuario</h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-page="/MainMenu">Inicio</a></li>
                    <li class="breadcrumb-item">Mantenimientos</li>
                    <li class="breadcrumb-item"><a asp-page="./Usuarios">Usuarios</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Nuevo</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        
                        <div class="mb-3">
                            <label asp-for="UserModel.Username" class="form-label">Usuario</label>
                            <input asp-for="UserModel.Username" class="form-control" />
                            <span asp-validation-for="UserModel.Username" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="UserModel.Email" class="form-label">Email</label>
                            <input asp-for="UserModel.Email" class="form-control" type="email" />
                            <span asp-validation-for="UserModel.Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="UserModel.Password" class="form-label">Contrase√±a</label>
                            <input asp-for="UserModel.Password" class="form-control" type="password" />
                            <span asp-validation-for="UserModel.Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3 form-check">
                            <input asp-for="UserModel.IsActive" class="form-check-input" type="checkbox" />
                            <label asp-for="UserModel.IsActive" class="form-check-label">Activo</label>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-page="./Usuarios" class="btn btn-secondary">
                                <i class="fas fa-times me-2"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
