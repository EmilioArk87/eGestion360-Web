@page
@model eGestion360Web.Pages.Mantenimientos.UsuariosDeleteModel
@{
    ViewData["Title"] = "Eliminar Usuario";
}

<div class="container">
    <div class="row mb-4">
        <div class="col-12">
            <h2><i class="fas fa-user-times me-2"></i>Eliminar Usuario</h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-page="/MainMenu">Inicio</a></li>
                    <li class="breadcrumb-item">Mantenimientos</li>
                    <li class="breadcrumb-item"><a asp-page="./Usuarios">Usuarios</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Eliminar</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0"><i class="fas fa-exclamation-triangle me-2"></i>Confirmar Eliminación</h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <strong>¡Advertencia!</strong> Esta acción no se puede deshacer.
                    </div>
                    
                    <h5>¿Está seguro de que desea eliminar este usuario?</h5>
                    
                    <dl class="row mt-4">
                        <dt class="col-sm-3">ID</dt>
                        <dd class="col-sm-9">@Model.UserModel.Id</dd>

                        <dt class="col-sm-3">Usuario</dt>
                        <dd class="col-sm-9">@Model.UserModel.Username</dd>

                        <dt class="col-sm-3">Email</dt>
                        <dd class="col-sm-9">@Model.UserModel.Email</dd>

                        <dt class="col-sm-3">Fecha Creación</dt>
                        <dd class="col-sm-9">@Model.UserModel.CreatedAt.ToString("dd/MM/yyyy HH:mm")</dd>

                        <dt class="col-sm-3">Estado</dt>
                        <dd class="col-sm-9">
                            @if (Model.UserModel.IsActive)
                            {
                                <span class="badge bg-success">Activo</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Inactivo</span>
                            }
                        </dd>
                    </dl>

                    <form method="post">
                        <input type="hidden" asp-for="UserModel.Id" />
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-page="./Usuarios" class="btn btn-secondary">
                                <i class="fas fa-times me-2"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash me-2"></i>Eliminar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
